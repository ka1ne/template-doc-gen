# Confluence Configuration
# Your Confluence instance URL (e.g., https://your-company.atlassian.net)
CONFLUENCE_URL=https://your-company.atlassian.net

# Your Atlassian account email address
CONFLUENCE_USERNAME=your-email@example.com

# API token generated at https://id.atlassian.net/manage-profile/security/api-tokens
CONFLUENCE_API_TOKEN="YOUR_API_TOKEN_HERE"

# The space key where documentation will be published (e.g., "TEAM" or "~123456789" for personal spaces)
CONFLUENCE_SPACE_KEY=SPACE_KEY

# The ID of the parent page where documentation will be created as children
# Find this in the URL when viewing the page: .../pages/123456/Page+Name
CONFLUENCE_PARENT_PAGE_ID=123456

# Processing Options
SOURCE_DIR=templates
OUTPUT_DIR=docs/output
FORMAT=html
VERBOSE=true
PUBLISH=false
VALIDATE_ONLY=false 